{% extends 'base.html.twig' %}
{% block stylesheet %}
    <link href='https://fonts.googleapis.com/css?family=Shadows+Into+Light+Two' rel='stylesheet' type='text/css'>
{% endblock %}
{% block body %}
    <nav class="login-header navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <div class="navbar-brand">TrueBlue(β)</div>
                <ul class="nav navbar-nav">
                    <li>
                        {% if is_granted('ROLE_OAUTH_USER') %}
                            <a href="{{ path('home', {'username': app.user.username}) }}" class="btn menu-btn">Home</a>
                        {% else %}
                            <a href="{{ path('hwi_oauth_service_redirect', { 'service' : 'twitter' }) }}" class="btn menu-btn">Login with Twitter</a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <div class="landing">
            <div class="opacity-layer">
                <div class="container" style="height: 100%;">
                    <div class="row">
                        <div class="flex-horizontally-center col-md-12">
                            <section>
                                <h2>More Deep Work.</h2>
                                <h6>{{ 'index.overview'|trans }}</h6>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section class="description row">
            <div class="col-md-offset-2 col-md-8">
                <h6>{{ 'index.description.first'|trans }}</h6>

                <h6>{{ 'index.description.function-header'|trans }}</h6>
                <ul>
                    <li>{{ 'index.description.function1'|trans }}</li>
                    <ul>
                        <li>{{ 'index.description.function1-more'|trans }}</li>
                    </ul>
                    <li>{{ 'index.description.function2'|trans }}</li>
                    <li>{{ 'index.description.function3'|trans }}</li>
                    <li>{{ 'index.description.function4'|trans }}</li>
                </ul>

                <a href="https://github.com/ryota-murakami/trueblue" target="_blank">{{ 'index.description.demo'|trans }}</a>

                <h6>{{ 'index.description.other-header'|trans }}</h6>
                <ul>
                    <li>{{ 'index.description.other1'|trans }}</li>
                    <li>{{ 'index.description.other2'|trans }}</li>
                    <li>{{ 'index.description.other3'|trans }}</li>
                    <li>{{ 'index.description.other4'|trans }}</li>
                </ul>

                <h6>{{ 'index.description.device-header'|trans }}</h6>
                <ul>
                    <li>{{ 'index.description.device1'|trans }}</li>
                    <li>{{ 'index.description.device2'|trans }}</li>
                    <li>{{ 'index.description.device3'|trans }}</li>
                </ul>

                <h6>{{ 'index.description.develop-header'|trans }}</h6>
                <ul>
                    <li>{{ 'index.description.developer1'|trans }}<a href="https://twitter.com/malloc007" target="_blank">@malloc007</a>{{ 'index.description.developer2'|trans }}</li>
                    <li>{{ 'index.description.progress1'|trans }}</li>
                    <li>{{ 'index.description.progress2'|trans }}</li>
                </ul>

                <h6>{{ 'index.description.last'|trans }}</h6>

                <p class="navigate-btn">
                {% if is_granted('ROLE_OAUTH_USER') %}
                    <a href="{{ path('home', {'username': app.user.username}) }}" class="btn menu-btn">{{ 'index.home'|trans }}</a>
                {% else %}
                    <a href="{{ path('hwi_oauth_service_redirect', { 'service' : 'twitter' }) }}" class="btn menu-btn">{{ 'index.login'|trans }}</a>
                {% endif %}
                </p>
            </div>
        </section>
    </main>
    <footer class="footer">
        <ul class="navi">
            <li><a href="/">
                    <small>{{ 'index.about'|trans }}</small>
                </a></li>
            <li><a href="/">
                    <small>{{ 'index.terms-of-service'|trans }}</small>
                </a></li>
            <li><a href="/">
                    <small>{{ 'index.privacy-policy'|trans }}</small>
                </a></li>
        </ul>
        <div class="copyright">
            <small>Copyright © 2017 Ryota Murakami. All Rights Reserved.</small>
        </div>
    </footer>
{% endblock %}

{% block javascript %}
    <script src="{{ asset('/assets/build/index.js', 'webpack') }}"></script>
{% endblock %}
